<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Web_Test_Execution_Suite" parallel="classes" thread-count="1" data-provider-thread-count="1">
    <listeners>
        <listener class-name="com.starbucks.listeners.TestNGExecutionListener"/>
<!--        <listener class-name="com.starbucks.listeners.TestListener"/>-->
    </listeners>

    <test name="Starbucks_Web_Test">
        <!--
          To run on Chrome browser pass browser value as : "chrome"
          To run on Firefox browser pass browser value as : "firefox"
        -->
        <parameter name="browser" value="chrome."/>
        <parameter name="dataID" value="Starbucks_Web_Automation"/>
        <classes>

            <class name="com.starbucks.web.Test_Scenarios_For_Starbucks_E2E_Functionality">
                <methods>
                    <include name="verify_StarbucksApplicationOpensOnBrowserSuccessfully"/>
                    <include name="verify_UserSuccessfullyAbleToLandOnProfilePage"/>
                    <include name="verify_UserSuccessfullyAbleToLoginWithValidCredentials"/>
                    <include name="verify_UserSuccessfullyAbleToLandOnStorePage"/>
                    <include name="verify_UserAbleToSelectDesiredStoreAndNavigateToStoreDetailsPage"/>
                    <include name="verify_UserSuccessfullyAbleToNavigateToOrderingPage"/>
                </methods>
            </class>

<!--            <class name="com.starbucks.web.Test_Scenarios_For_Starbucks_E2E_Functionality">-->
<!--                <methods>-->
<!--                    <include name="verify_StoreNavigationFunctionality"/>-->
<!--                    <include name="verify_UserLandsOnHomePageSuccessfully"/>-->
<!--                    <include name="verify_PricerLabelsCardsExists"/>-->
<!--                    <include name="verify_RequestHistoryTableDisplayed"/>-->
<!--                    <include name="verify_ReportsTableDisplayed"/>-->
<!--                </methods>-->
<!--            </class>-->

        </classes>
    </test>

</suite>