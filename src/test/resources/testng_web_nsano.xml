<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Web_Test_Execution_Suite" parallel="classes" thread-count="1" data-provider-thread-count="1">
    <listeners>
        <listener class-name="com.nsano.listeners.TestNGExecutionListener"/>
        <listener class-name="com.nsano.listeners.TestSlackListener"/>
        <listener class-name="com.nsano.listeners.TestTeamsListener"/>
        <!--        <listener class-name="com.nsano.listeners.TestJiraListener"/>-->
    </listeners>

    <test name="NSano_Web_Test">
        <!--
          To run on Chrome browser pass browser value as : "chrome"
          To run on Firefox browser pass browser value as : "firefox"
        -->
        <parameter name="browser" value="chrome"/>
        <parameter name="dataID" value="NSano_Web_Automation"/>
        <classes>
            <class name="com.nsano.web.Test_Scenarios_For_NSano_Login_Functionality">
                <methods>
                    <include name="verify_UserNotAbleToLoginWithInvalidUsernameAndPassword"/>
                    <include name="verify_UserNotAbleToLoginWithInvalidPassword"/>
                    <include name="verify_UserNotAbleToLoginWithInvalidUsername"/>
                </methods>
            </class>
            <class name="com.nsano.web.Test_Scenarios_For_NSano_E2E_Functionality">
                <methods>
                    <include name="verify_UserSuccessfullyAbleToLoginWithValidCredentials"/>
                    <include name="verify_DashboardScreenDisplay"/>
                    <include name="verify_DashboardScreenFilterFunctionality"/>
                    <include name="verify_AccountBalance"/>
                    <include name="verify_ListOfTopUpsPerPage"/>
                    <include name="verify_TopUpHistoryPageFilterFunctionality"/>
                    <include name="verify_MessageContentsDisplayed"/>
                    <include name="verify_SmsFilterFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>